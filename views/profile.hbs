<header class="profile-header">
    <div class="blue-circle"></div>
    <div class="profile-title">
        <h3>{{user.name}}</h3>
        <img src="{{user.level.img}}" alt="User rank">
        <h2>{{user.level.name}}</h2>
    </div>
</header>

<main>
    <section>
        <div>
            <p>{{daysPassed}}</p>
            <p>days</p>
        </div>
        <div>
            <p>{{user.experience}}</p>
            <p>XP</p>
        </div>
    </section>

    <section>
        <div>
            {{!-- BARRITA PORCENTAJE--}}
        </div>

        <p>{{points}} points left to level up</p>
    </section>

    {{#if user.dinosaved}}

    <section>
        <h4>You already saved</h4>
        <div>
            <ul>
                {{#each user.dinosaved}}
                <img src="{{this.img}}" />
                {{this.name}}
                {{/each}}
            </ul>

        </div>
    </section>

    {{else}}
    <section>
        <h4>Go and save your first Dino!</h4>

    </section>
    {{/if}}
</main>